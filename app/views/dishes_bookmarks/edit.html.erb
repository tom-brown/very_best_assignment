<!-- Validation failure messages -->
<% if @dishes_bookmark.errors.any? %>
  <% @dishes_bookmark.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Dishes Bookmark #<%= @dishes_bookmark.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_dishes_bookmark/<%= @dishes_bookmark.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dish_id -->
      <div class="form-group">
        <label for="dish_id" class="control-label">
          Dish
        </label>

        <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name, @dishes_bookmark.dish_id), :class => "form-control") %>
      </div>

      <!-- Label and input for bookmark_id -->
      <div class="form-group">
        <label for="bookmark_id" class="control-label">
          Bookmark
        </label>

        <%= select_tag(:bookmark_id, options_from_collection_for_select(Bookmark.all, :id, :venue_id, @dishes_bookmark.bookmark_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Dishes Bookmark
      </button>
      or
      <a href="/dishes_bookmarks/<%= @dishes_bookmark.id %>">Cancel</a>
    </form>
  </div>
</div>
